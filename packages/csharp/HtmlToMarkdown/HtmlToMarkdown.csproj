<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>

    <!-- Package metadata -->
    <PackageId>KreuzbergDev.HtmlToMarkdown</PackageId>
    <Version>2.22.4</Version>
    <Authors>Na'aman Hirschfeld</Authors>
    <Company>Kreuzberg.dev</Company>
    <Description>High-performance HTML to Markdown converter with C# bindings to Rust core</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/kreuzberg-dev/html-to-markdown</PackageProjectUrl>
    <RepositoryUrl>https://github.com/kreuzberg-dev/html-to-markdown</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>html;markdown;converter;rust;ffi</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../../README.md" Pack="true" PackagePath="/" />
    <None Include="runtimes/**" Pack="true" PackagePath="runtimes/" />
  </ItemGroup>

</Project>
